filebeat:
  prospectors:
    {% for log in filebeat_logs %}
    -
      paths:
        {% for path in log.paths %}
        - {{ path }}
        {% endfor %}
      input_type: log
      document_type: {{ log.type }}
    {% endfor %}
output:
  logstash:
    hosts: ["{{ filebeat_logstash_host }}:{{ filebeat_logstash_port }}"]
  console:
    pretty: true
shipper:
logging:
  files:
    rotateeverybytes: 10485760 # = 10MB
